# Rock, Paper, Scissors Game
# This is a simple command-line game where the user plays against the computer.


import random

print("🎮 Welcome to Rock, Paper, Scissors Game!")

username = input("Please enter your name: ")

print(f"\nHello {username}, Let's play the game!")
print("Enter your choice:\n R = Rock\n P = Paper\n S = Scissors")
print("Type 'end' to quit the game anytime.\n")

lst = ["R", "P", "S"]

while True:
    user = input("👉 Your choice: ").upper()

    if user == "END":
        print("👋 Game Ended. Thanks for playing!")
        break

    if user not in lst:
        print("❌ Invalid input! Please enter R, P, or S.")
        continue

    comp = random.choice(lst)
    print(f"🤖 Computer's choice: {comp}")

    if user == comp:
        print("🤝 It's a TIE. Try again!")

    elif (user == "R" and comp == "S") or \
         (user == "P" and comp == "R") or \
         (user == "S" and comp == "P"):
        if user == "R":
            print("🪨 Rock crushes Scissors — You win!")
        elif user == "P":
            print("📄 Paper covers Rock — You win!")
        elif user == "S":
            print("✂️ Scissors cuts Paper — You win!")

    else:
        if comp == "R":
            print("🪨 Rock crushes Scissors — Computer wins!")
        elif comp == "P":
            print("📄 Paper covers Rock — Computer wins!")
        elif comp == "S":
            print("✂️ Scissors cuts Paper — Computer wins!")

    print()  # blank line between rounds
    
