# Rock, Paper, Scissors Game
# This is a simple command-line game where the user plays against the computer.


import random

print("ğŸ® Welcome to Rock, Paper, Scissors Game!")

username = input("Please enter your name: ")

print(f"\nHello {username}, Let's play the game!")
print("Enter your choice:\n R = Rock\n P = Paper\n S = Scissors")
print("Type 'end' to quit the game anytime.\n")

lst = ["R", "P", "S"]

while True:
    user = input("ğŸ‘‰ Your choice: ").upper()

    if user == "END":
        print("ğŸ‘‹ Game Ended. Thanks for playing!")
        break

    if user not in lst:
        print("âŒ Invalid input! Please enter R, P, or S.")
        continue

    comp = random.choice(lst)
    print(f"ğŸ¤– Computer's choice: {comp}")

    if user == comp:
        print("ğŸ¤ It's a TIE. Try again!")

    elif (user == "R" and comp == "S") or \
         (user == "P" and comp == "R") or \
         (user == "S" and comp == "P"):
        if user == "R":
            print("ğŸª¨ Rock crushes Scissors â€” You win!")
        elif user == "P":
            print("ğŸ“„ Paper covers Rock â€” You win!")
        elif user == "S":
            print("âœ‚ï¸ Scissors cuts Paper â€” You win!")

    else:
        if comp == "R":
            print("ğŸª¨ Rock crushes Scissors â€” Computer wins!")
        elif comp == "P":
            print("ğŸ“„ Paper covers Rock â€” Computer wins!")
        elif comp == "S":
            print("âœ‚ï¸ Scissors cuts Paper â€” Computer wins!")

    print()  # blank line between rounds
    
